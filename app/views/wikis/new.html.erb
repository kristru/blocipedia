<h1>Create a new Wiki</h1>
<form>
    <%= form_for :wiki, local: true do |f| %>
      <div class="form-group">
        <div class="field">
         <%= f.label :title %>
         <%= f.text_field :title, class:"form-control", placeholder: "Whatcha talking about?" %>
        </div>
      </div>

      <div class="form-group">
        <div class="field">
         <%= f.label :body %>
         <%= f.text_area :body, rows: 10, class:'form-control', placeholder: "Talk it up..." %>
        </div>
      </div>

      <div class="form-check">
        <div class="field">
          <%= f.check_box :private %>
          <%= f.label :private %>
        </div>
      </div>

      <div class="form-group">
       <%= f.submit "Save", class: 'btn-lg btn-primary' %>
      </div>
     <% end %>
  </div>
</form>
